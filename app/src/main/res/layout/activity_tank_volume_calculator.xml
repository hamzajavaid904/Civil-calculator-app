<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tank_volume_calculator">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="#E57A44"
                >
                <ImageView
                    android:id="@+id/backbtnTVC"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/backicon"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:padding="2dp"
                    >
                </ImageView>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/watertower"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginStart="85dp"
                    >
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Tank Volume Calculator"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >
                <Button
                    android:id="@+id/buttonfeetinchTVC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Feet / Inch"
                    android:background="@drawable/spinnerstyle"
                    android:textColor="@color/black"
                    android:layout_marginEnd="2.5dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@null"

                    >
                </Button>
                <Button
                    android:id="@+id/buttonmetercmTVC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Meter / CM"
                    android:background="@drawable/btnstyle"
                    android:textColor="@color/white"
                    android:layout_marginStart="2.5dp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="@null"
                    >
                </Button>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linearlayoutfeetinchTVC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaylenfeetTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            style="@style/CustomTextInputStyle"
                            android:hint="Length (feet)"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtlenfeetTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="7"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlayleninchesTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            style="@style/CustomTextInputStyle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtleninchesTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Length (inches)"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaywidthfeetTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Width (feet)"
                            style="@style/CustomTextInputStyle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtwidthfeetTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="7"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaywidthinchesTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            style="@style/CustomTextInputStyle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtwidthinchesTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Width (inches)"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaydepthfeetTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            style="@style/CustomTextInputStyle"
                            android:hint="Depth (feet)">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtdepthfeetTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="7"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaydepthinchesTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            style="@style/CustomTextInputStyle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtdepthinchesTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Depth (inches)"
                                android:textSize="14sp"
                                android:inputType="number"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearlayoutMetercmTVC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="invisible"
                    >
                    <LinearLayout
                        android:id="@+id/linearlayoutMetercmlenTVC"
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaylenmeterTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Length (meter)"
                            style="@style/CustomTextInputStyle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtlenmeterTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textSize="14sp"
                                android:maxLength="7"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaylencmTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:hint="Length (cm)"
                            style="@style/CustomTextInputStyle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtlencmTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearlayoutMetercmwidthTVC"
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaywidthmeterTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Width (meter)"
                            style="@style/CustomTextInputStyle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtwidthmeterTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:textSize="14sp"
                                android:maxLength="7"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaywidthcmTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:hint="Width (cm)"
                            style="@style/CustomTextInputStyle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtwidthcmTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linearlayoutMetercmdepthTVC"
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaydepthmeterTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:hint="Depth (meter)"
                            style="@style/CustomTextInputStyle"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtdepthmeterTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:maxLength="7"
                                android:inputType="number"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/txtinputlaydepthcmTVC"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            style="@style/CustomTextInputStyle"
                            android:hint="Depth (cm)"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edtdepthcmTVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:inputType="number"
                                android:maxLength="2"
                                >
                            </com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/buttoncalculatorTVC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Calculate"
                    android:background="@drawable/btnstyle"
                    android:textColor="@color/white"
                    android:layout_marginEnd="2.5dp"
                    android:layout_marginStart="8dp"
                    app:backgroundTint="@null"
                    >
                </Button>
                <Button
                    android:id="@+id/buttonresetTVC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Reset"
                    android:background="@drawable/btnstyle"
                    android:textColor="@color/white"
                    android:layout_marginStart="2.5dp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="@null"
                    >
                </Button>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayallTVC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="60dp"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="#E57A44"
                        android:text="Capacity of water-Sump/Tank"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="14sp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/txtcapacityofwaterTVC"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text="23 or 34"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        >
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="60dp"
                app:cardCornerRadius="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="#E57A44"
                        android:text="Volume"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="14sp"
                        >
                    </TextView>
                    <TextView
                        android:id="@+id/txttotalvolumeTVC"
                        android:layout_width="300dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:text="23 or 34"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        >
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>