<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home_Screen">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Construction Calculator"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="#E57A44"
        >
    </TextView>
<LinearLayout
    android:layout_width="350dp"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_gravity="center"
    >
    <EditText
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="40dp"
        android:paddingStart="10dp"
        android:hint="Search..."
        android:textColor="@color/black"
        android:textStyle="normal"
        android:textColorHint="#33000000"
        android:textSize="16sp"
        android:background="@drawable/searchstyle"
        >
    </EditText>
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="0.15"
        android:layout_marginEnd="2.5dp"
        android:layout_height="40dp"
        android:src="@drawable/vector2"
        android:scaleType="fitXY"
        android:padding="12dp"
        android:layout_gravity="center"
        android:background="@drawable/searchimagestyle"
        >
    </ImageView>
</LinearLayout>

    <GridView
        android:id="@+id/icongridview"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:layout_margin="20dp"
        >
    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#E57A44"
        >
        <LinearLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/tabicon1"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:src="@drawable/paper1"
                android:layout_marginBottom="5dp"
                android:padding="15dp"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/tabicon2"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:src="@drawable/home1"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp"
                android:padding="15dp"
                android:background="@drawable/tabstyle"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/tabicon3"
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:src="@drawable/info1"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp"
                android:padding="15dp"
                >
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>